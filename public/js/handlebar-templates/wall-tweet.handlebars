<div class="step tweet {{random_colour}} {{#if media}} has_media {{/if}}" id="tweet_{{id_str}}" data-x="{{x}}" data-y="{{y}}" data-z="{{z}}" data-scale="{{scale}}">
    <div class="tweet_header">
	    <span class="tweet_avatar" style="background-image: url({{profile_image}});">&nbsp;</span>
		<span class="tweet_user">
			<div class="tweet_user_name">{{user_name}}</div>
			<div class="tweet_user_handle">@{{user_screen_name}}</div>
		</span>
     </div>
	<div class="tweet_content_container">
		<div class="tweet_content">{{{tweet_text}}}</div>
		<div class="tweet_time">{{tweet_time}}</div>
	</div>
	{{#if media}}
	<div class="clear">&nbsp;</div>
	<div class="tweet_media">
		<img src="{{media_url}}" />
	</div>
	{{/if}}
    {{!--
    <div class="tweet_footer">
        <div class="tweet_actions">
            <a href="" class="tweet_action_reply">reply</a>
            <a href="" class="tweet_action_retweet">retweet</a>
            <a href="" class="tweet_action_favourite">favourite</a>
        </div>
    </div>
    --}}
</div>
